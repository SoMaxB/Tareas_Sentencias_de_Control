public class Main {
    public static void main(String[] args) {
        int numeroIF = 8;

        if (numeroIF == 0) {
            System.out.println("Es cero");}
        else if (numeroIF < 0)
        {
            System.out.println("Es negativo");
        }
        else
        {
            System.out.println("Es positivo");
        }

        var numeroWhile = 0;

        while (numeroWhile < 3) {
            System.out.println(numeroWhile);
            numeroWhile = numeroWhile + 1;
        }

        int contador = 1;

        do {
            System.out.println("La variable Do While ha pasado " + contador + " vez");
            contador = contador - 1;
        } while (contador > 1);

        var numeroFor = 0;
        for (numeroFor = 0; numeroFor <= 3; numeroFor = numeroFor +1);{
            System.out.println(numeroFor);
        }

        var estacion = "Oto침o";
            switch (estacion) {
                case "Verano":
                    System.out.println("Es Verano");
                    break;
                case "Oto침o":
                    System.out.println("Es Oto침o");
                    break;
                case "Invierno":
                    System.out.println("Es Invierno");
                    break;
                case "Primavera":
                    System.out.println("Es Primavera");
                    break;
                default:
                    System.out.println("No es una estaci칩n");
                    break;
            }
    }
}
